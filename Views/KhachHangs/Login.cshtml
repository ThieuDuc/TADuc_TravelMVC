@model TADuc_TravelMVC.Models.KhachHang

@*@{
        ViewBag.Title = "Login";
        Layout = "~/Views/Shared/_Layout.cshtml";
}*@
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/index.css" rel="stylesheet" />
    <title>Login</title>
    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    <h2 style="text-align:center;">Dang Nhap </h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 style="text-align:center;">KhachHang</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.TenDangNhap, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.MatKhau, new { htmlAttributes = new { tyle ="Password",@class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input style=" height: 35px; width: 150px; background-color: var(--main-color); color: white; margin-top: 20px; border: none; cursor: pointer; border-radius: 5px; transition: all 0.3s ease;" type="submit" value="Dang Nhap " class="btn btn-default" />
                </div>
            </div>
            <h3 class="text-danger">@ViewBag.Fail</h3>
            <div style="display:flex;padding:10px 20px;justify-content:center;">
                <button type="submit"><a href="/Home/Index/">QUay Lai</a></button>
                <button type="submit"><a style="text-align:center;" href="/KhachHangs/Create"> Dang Ki </a></button>
            </div>
        </div>
    }
</body>
</html>
